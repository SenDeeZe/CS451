@model Lab5_6.Models.ViewModels.UserEditViewModel
@{
    ViewBag.Title = "Edit user";
}
<form asp-action="Edit" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Username</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Bio" class="control-label">Bio description</label>
        <input type="text" asp-for="Bio" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Image" class="control-label">Avatar address</label>
        <input type="url" asp-for="Image" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-outline-secondary" />
    </div>
</form>