<div id="about" class="section wb">
    <div class="container">
        @{
            void RenderText(string title, string subtitle, string[] text, string link)
            {
                <div class="col-md-6">
                    <div class="message-box">
                        <h4>@title</h4>
                        <h2>@subtitle</h2>
                        <p class="lead">@text.First()</p>

                        <p>@string.Join(" ", text.Skip(1))</p>

                        <a href="@link" class="btn btn-light btn-radius btn-brd grd1">Learn More</a>
                    </div><!-- end messagebox -->
                </div><!-- end col -->
            }

            void RenderImage(string image, string videoLink)
            {
                <div class="col-md-6">
                    <div class="post-media wow fadeIn">
                        <img src="@image" alt="" class="img-responsive img-rounded">
                        @if (!string.IsNullOrEmpty(videoLink))
                        {
                            <a href="@videoLink" data-rel="prettyPhoto[gal]" class="playbutton"><i class="flaticon-play-button"></i></a>
                        }
                    </div><!-- end media -->
                </div><!-- end col -->
            }
        }
