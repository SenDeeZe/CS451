@model Lab4.Models.PostModel
@functions{
    string formatDate(DateTime postDate)
    {
        var now = DateTime.Now;
        var delta = now - postDate;
        if (delta.Days > 0)
            return delta.ToString("%d") + " days ago";
        else if (delta.Hours > 0)
            return delta.ToString("%h") + " hours ago";
        else if (delta.Minutes > 0)
            return delta.ToString("%m") + " minutes ago";
        else return "less than a minutes ago";
    }
}

    <div class="card gedf-card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="mr-2">
                        <img class="rounded-circle" width="45" src=@Model.Author.Image alt="post image">
                    </div>
                    <div class="ml-2">
                        <div class="h5 m-0">@Model.Author.Name</div>
                        <div class="h7 text-muted">@@@Model.Author.UserName</div>
                    </div>
                </div>
                <div>
                    <div class="dropdown">
                        <button class="btn btn-link dropdown-toggle" type="button" id="gedf-drop1"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-ellipsis-h"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="gedf-drop1">
                            <a class="dropdown-item" href="#"><i class="fa fa-edit mr-2"></i>Edit</a>
                            <a class="dropdown-item btn-outline-danger" href="#"><i class="fa fa-trash mr-2"></i>Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="text-muted h7 mb-2">
                <a class="card-link" href="#"><i class="fa fa-clock-o"></i> @formatDate(Model.Date)</a>
            </div>
            @if (Model.Image != null)
            {
            <img class="rounded float-left mr-3" src=@Model.Image />
            }
            <p class="card-text">
                @Model.Text
            </p>
        </div>
        <div class="card-footer">
            <a href="#" class="card-link"><i class="fa fa-star"></i> @(Model.Likes?.Count ?? 0)</a>
            <!--<a href="#" class="card-link"><i class="fa fa-comment"></i> Comment</a>
            <a href="#" class="card-link"><i class="fa fa-mail-forward"></i> Share</a> -->

        </div>
    </div>

